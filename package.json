{
  "name": "bethlehem",
  "version": "1.9.0",
  "description": "A minimal, practical functional programming library for JavaScript",
  "license": "MIT",
  "author": "KsRyY",
  "main": "dist/index.js",
  "module": "dist/b.esm.js",
  "typings": "dist/index.d.ts",
  "unpkg": "dist/b.umd.production.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "ava --watch",
    "build": "foy build",
    "build:docs": "foy build:docs",
    "test": "ava --verbose",
    "test:coverage": "foy test:coverage",
    "lint": "eslint",
    "prepublishOnly": "foy build",
    "benchmark": "foy benchmark"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@ava/babel": "1.0.1",
    "@typescript-eslint/eslint-plugin": "4.29.3",
    "@typescript-eslint/parser": "4.29.3",
    "ava": "3.15.0",
    "c8": "7.8.0",
    "chuhai": "1.2.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-config-rem": "4.0.0",
    "eslint-config-xo": "0.38.0",
    "eslint-config-xo-typescript": "0.44.0",
    "eslint-plugin-ava": "12.0.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-unicorn": "22.0.0",
    "esm": "3.2.25",
    "espower-loader": "1.2.2",
    "foy": "0.2.11",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "power-assert": "1.6.1",
    "prettier": "2.3.2",
    "rambda": "^4.4.0",
    "ramda": "^0.26.1",
    "ts-node": "9.1.1",
    "tsdx": "0.14.1",
    "tslib": "2.3.1",
    "typedoc": "0.21.9",
    "typescript": "4.4.2"
  },
  "resolutions": {
    "**/typescript": "4.4.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --ext js,ts --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "ava": {
    "require": [
      "esm",
      "ts-node/register/transpile-only"
    ],
    "babel": true,
    "extensions": [
      "ts"
    ],
    "files": [
      "!dist/**/*"
    ]
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.com"
  }
}
